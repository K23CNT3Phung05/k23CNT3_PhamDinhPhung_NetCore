@model PdpLesson08Annotation.Models.PdpAccount

@{
    ViewData["Title"] = "Thêm tài khoản mới";
}

<h1>Thêm tài khoản</h1>

<h4>Thông tin tài khoản</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="PdpCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PdpId" class="control-label"></label>
                <input asp-for="PdpId" class="form-control" />
                <span asp-validation-for="PdpId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpFullName" class="control-label"></label>
                <input asp-for="PdpFullName" class="form-control" />
                <span asp-validation-for="PdpFullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpEmail" class="control-label"></label>
                <input asp-for="PdpEmail" class="form-control" />
                <span asp-validation-for="PdpEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpPhone" class="control-label"></label>
                <input asp-for="PdpPhone" class="form-control" />
                <span asp-validation-for="PdpPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpAddress" class="control-label"></label>
                <input asp-for="PdpAddress" class="form-control" />
                <span asp-validation-for="PdpAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpAvatar" class="control-label"></label>
                <input asp-for="PdpAvatar" class="form-control" />
                <span asp-validation-for="PdpAvatar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpBirthday" class="control-label"></label>
                <input asp-for="PdpBirthday" type="date" class="form-control" />
                <span asp-validation-for="PdpBirthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpGender" class="control-label"></label>
                <select asp-for="PdpGender" class="form-control">
                    <option value="">-- Chọn giới tính --</option>
                    <option>Nam</option>
                    <option>Nữ</option>
                    <option>Khác</option>
                </select>
                <span asp-validation-for="PdpGender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpPassword" class="control-label"></label>
                <input asp-for="PdpPassword" type="password" class="form-control" />
                <span asp-validation-for="PdpPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdpFacebook" class="control-label"></label>
                <input asp-for="PdpFacebook" class="form-control" />
                <span asp-validation-for="PdpFacebook" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                <a asp-action="PdpIndex" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
