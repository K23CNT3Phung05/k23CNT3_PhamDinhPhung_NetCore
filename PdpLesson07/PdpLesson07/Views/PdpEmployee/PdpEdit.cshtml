@model Pdplesson07.Models.PdpEmployee

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="PdpEdit" method="post">
    @* Trường ẩn để lưu ID *@
    <input type="hidden" asp-for="PdpId" />

    <div class="mb-3">
        <label asp-for="PdpName" class="form-label"></label>
        <input asp-for="PdpName" class="form-control" />
        <span asp-validation-for="PdpName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PdpBirthDay" class="form-label"></label>
        <input asp-for="PdpBirthDay" type="date" class="form-control" />
        <span asp-validation-for="PdpBirthDay" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PdpEmail" class="form-label"></label>
        <input asp-for="PdpEmail" class="form-control" />
        <span asp-validation-for="PdpEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PdpPhone" class="form-label"></label>
        <input asp-for="PdpPhone" class="form-control" />
        <span asp-validation-for="PdpPhone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PdpSalary" class="form-label"></label>
        <input asp-for="PdpSalary" class="form-control" />
        <span asp-validation-for="PdpSalary" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PdpStatus" class="form-label"></label>
        <select asp-for="PdpStatus" class="form-select">
            <option value="true">Đang làm</option>
            <option value="false">Nghỉ</option>
        </select>
        <span asp-validation-for="PdpStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="PdpList" class="btn btn-secondary">Quay lại</a>
</form>
