﻿@{
    ViewData["Title"] = "About";
}
<h1>@ViewData["Title"]</h1>

<div class="card" style="max-width: 400px;">
    <div class="card-body text-center">
        <img src="~/images/avatar.png" alt="Avatar" style="width:120px; height:120px; border-radius:50%; object-fit:cover; margin-bottom:15px;" />
        <h4 class="card-title">@Model.PdpName</h4>
        <p class="card-text"><strong>ID:</strong> @Model.id</p>
        <p class="card-text"><strong>Email:</strong> @Model.PdpEmail</p>
        <p class="card-text"><strong>Password:</strong> @Model.PdpPassword</p>
    </div>
</div>